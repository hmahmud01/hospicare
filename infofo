def edbaseGuardianPortal(request):
    user_id = request.user.id
    data = EdbaseGuardianProfile.objects.filter(user_id=user_id)
    return render(request, "portal/guardian/index.html", {"data": data})


path('guardianportal/', views.edbaseGuardianPortal, name='guardianportal'),